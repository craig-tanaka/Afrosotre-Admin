{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "site": "afrostore-admin",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      { 
        "source":"/service-worker.js", 
        "headers": [{
          "key": "Cache-Control", 
          "value": "no-cache"
        }] 
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
